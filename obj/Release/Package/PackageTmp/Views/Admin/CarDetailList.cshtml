                $("#updHasKey").val(response.HasKey);

                $("#updOdometerReading").val(response.OdometerReading);

                $("#updSalePrice").val(response.SalePrice);

                $("#updRepairCost").val(response.RepairCost);

                $("#updateModal").modal('show');
            },
            error: function () {
                $("#loadImg").hide();

                alert("ajax Failed");
