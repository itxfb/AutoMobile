
@{
    ViewBag.Title = "Import Csv";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}


<!-- Main content -->
<div class="content" style="min-height:750px;">
    <!-- Simple form -->
    <form action="@Url.Action("PostImportCsv", "Admin")" class="login-form" method="post" enctype="multipart/form-data">
        <div class="col-md-2"></div>
        <div class="panel panel-body col-lg-8">
            <div class="text-center">
                <div class="icon-object text-blue"><i class="icon-file-excel text-success"></i></div>
                <h5 class="content-group">Import Csv File</h5>
            </div>
            <div class="text-center" id="alertMsg" style="color:@ViewBag.Color ; font-weight:bold">
                @ViewBag.Message
            </div>
            <div class="form-group">
                <label class="text-bold">Upload File <span class="text-danger">*</span></label>
                <input type="file" name="PostedFile" class="form-control" required accept=".csv" />
                <span class="text-danger">only .csv files allowed</span>
            </div>
            <div class="form-group pull-right">
                <button type="submit" class="btn bg-blue-800 ">Upload<i class="glyphicon glyphicon-upload position-right"></i></button>
            </div>
        </div>
    </form>
    <!-- /simple form -->
</div>





