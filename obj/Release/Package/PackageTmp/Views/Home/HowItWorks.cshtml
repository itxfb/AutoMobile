<style>
    /*form styles*/
    #msform {
        /*text-align: center;*/
        position: relative;
        margin-top: 30px;
    }

        #msform fieldset {
            background: white;
            border: 0 none;
            border-radius: 8px;
            box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4);
            padding: 20px 30px;
            box-sizing: border-box;
